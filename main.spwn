import "chip.spwn"
import "ext.spwn"

$.print("Path to ROM (You may need a full path)")
rom = $.get_input("> ") 

buf = $.get_input("Show operations? (y/N) ")
let debug = false

if buf == "y" || buf == "yes" { debug = true }

let chip = @chip::new(rom, debug)

while true {
    chip.cycle()
    if chip.draw == true {
        chip.do_draw()
    }
}